{
  "name": "tamastudy-graphql-part2",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "precise-commits": "^1.0.2",
    "pretty-quick": "^2.0.1"
  },
  "scripts": {
    "prettier:server": "cd server && yarn prettier --write",
    "lint:server": "cd server && yarn lint",
    "prettier:client": "cd client && yarn prettier --write",
    "lint:client": "cd client && yarn lint"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "./scripts/git-commit-message.sh $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "server/src/**/*.{ts,js,graphql}": [
      "npm run prettier:server",
      "npm run lint:server",
      "git add"
    ],
    // "client/src/**/*.{ts,js,graphql,tsx,jsx}": [
    //   "npm run prettier:client",
    //   "npm run lint:client",
    //   "git add"
    // ]
  }
}
